extends ../base

block content 
	h4 Update Board
	form(method="POST")
		input(name="title", placeholder="Board Title", value=board.title, required)
		input(placeholder="Description", required, type="text", name="description", minlength=20, value=board.description)
		input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags", value=board.hashtags.join())
		input(value="Save",type="submit") 
